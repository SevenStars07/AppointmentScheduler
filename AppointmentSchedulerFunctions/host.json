{
    "version": "2.0",
    "extensions": {
        "durableTask": {
            "hubName": "%MyTaskHub%"
        }
    },
    "logging": {
        "applicationInsights": {
            "samplingSettings": {
                "isEnabled": true,
                "excludedTypes": "Request"
            },
            "enableLiveMetricsFilters": true
        },
        "logLevel": {
            "default": "None",
            "Host.Function.Console": "Information",
            "Function.CreateAppointment.User": "Information",
            "Function.AppointmentCreated.User": "Information",
            "Function.NotifyUsersOrchestrator.User": "Information",
            "Function.NotifyUserSubOrchestrator.User": "Information",
            "Function.NotifyUser.User": "Information"
        }
    }
}